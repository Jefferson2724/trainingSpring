package com.algaworks.algalog.client;

import org.springframework.beans.factory.annotation.Autowired;

public class ClientServicelmpl implements ClientService {
	
	@Autowired
	private ClientRepository clientRepository;
	
	@Override
	public Client create(ClientDTO clientBody) {
		Client client = this.clientRepository.saveAndFlush(this.toJPA(clientBody));
		
		return client;
	}
	
	public Client toJPA(ClientDTO client) {
		
		return Client.builder()
				.name(client.getName())
				.email(client.getEmail())
				.phonenumber(client.getPhonenumber())
				.build();
	}
}
